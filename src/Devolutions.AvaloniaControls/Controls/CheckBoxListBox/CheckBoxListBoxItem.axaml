<ResourceDictionary
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  x:ClassModifier="internal">

  <Design.PreviewWith>
    <StackPanel Width="150">
      <CheckBoxListBoxItem>multi 1</CheckBoxListBoxItem>
    </StackPanel>
  </Design.PreviewWith>

  <ControlTheme x:Key="{x:Type CheckBoxListBoxItem}" TargetType="CheckBoxListBoxItem" BasedOn="{StaticResource {x:Type CheckBox}}">
    <Setter Property="HorizontalAlignment" Value="Stretch" />
  </ControlTheme>
</ResourceDictionary>