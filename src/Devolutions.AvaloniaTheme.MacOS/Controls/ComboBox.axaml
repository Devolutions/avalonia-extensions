              <ComboBoxItem>Option 2</ComboBoxItem>
              <ComboBoxItem>Option 3</ComboBoxItem>
            </ComboBox>
            <ComboBox SelectedIndex="2" MaxDropDownHeight="100" IsEnabled="False">
