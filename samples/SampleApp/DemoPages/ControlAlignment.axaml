<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ext="clr-namespace:SampleApp.MarkupExtensions"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SampleApp.DemoPages.ControlAlignment">

  <ScrollViewer>
    <StackPanel Margin="10">
      <TextBlock Classes="h1" Text="Grids" />
      <Grid ColumnDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
            ColumnSpacing="10"
            Margin="10 0">
        <TextBlock Grid.Column="0">TextBlock</TextBlock>
        <TextBox Grid.Column="1" Watermark="TextBox" />
        <TextBox Grid.Column="2"
                 Height="22" MinHeight="22" MaxHeight="22"
                 IsVisible="{ext:ThemeIsOneOf 'DevExpress'}">
          thin
        </TextBox>
        <ComboBox Grid.Column="3" SelectedIndex="2">
          <ComboBoxItem>Option 1</ComboBoxItem>
          <ComboBoxItem>Option 2</ComboBoxItem>
          <ComboBoxItem>Combo</ComboBoxItem>
          <ComboBoxItem>Option 4 much longer</ComboBoxItem>
        </ComboBox>
        <ComboBox Grid.Column="4" IsEditable="True" SelectedIndex="2">
          <ComboBoxItem>Avalonia</ComboBoxItem>
          <ComboBoxItem>ComboBox</ComboBoxItem>
          <ComboBoxItem>IsEditable</ComboBoxItem>
          <ComboBoxItem>Option 4 much longer</ComboBoxItem>
        </ComboBox>
        <EditableComboBox Grid.Column="5">
          <EditableComboBoxItem Value="Devolutions" />
          <EditableComboBoxItem Value="EditableComboBox" />
          <EditableComboBoxItem Value="Option 3" />
        </EditableComboBox>
        <MultiComboBox Grid.Column="6" Watermark="MultiSelect...">
          <MultiComboBoxItem IsSelected="True">Item 1</MultiComboBoxItem>
          <MultiComboBoxItem>Item 2</MultiComboBoxItem>
          <MultiComboBoxItem IsSelected="True">Item 3</MultiComboBoxItem>
          <MultiComboBoxItem>Item 4</MultiComboBoxItem>
          <MultiComboBoxItem>Item 5</MultiComboBoxItem>
        </MultiComboBox>
        <TagInput Grid.Column="7" x:Name="HorizontalGridTagInput" Watermark="TagInput" Width="150" VerticalAlignment="Center" />
        <ColorPicker Grid.Column="8" />
        <AutoCompleteBox Grid.Column="9" x:Name="Animals" FilterMode="Contains" Watermark="AutoComplete" />
        <NumericUpDown Grid.Column="10" Value="0"
                       Increment="1"
                       Watermark="mm" />
        <CalendarDatePicker Grid.Column="11" />
        <Button Grid.Column="12" Content="Button" />
        <CheckBox Grid.Column="13" Content="Checkbox" IsChecked="True" />
        <RadioButton Grid.Column="14" Content="RadioButton" IsChecked="True" />
        <!-- Force larger container height to test if controls are affected (they shouldn't be) -->
        <TextBlock Grid.Column="15" Text="ðŸ™‚" FontSize="45" />
      </Grid>

      <Grid RowDefinitions="*, *, *, *, *, *, *, *, *, *, *, *, *, *, *, *"
            RowSpacing="5"
            Width="150"
            HorizontalAlignment="Left"
            Margin="10 5">
        <TextBlock Grid.Row="2">TextBlock</TextBlock>
        <TextBox Grid.Row="3" Watermark="TextBox" />
        <ComboBox Grid.Row="4" SelectedIndex="2">
          <ComboBoxItem>Option 1</ComboBoxItem>
          <ComboBoxItem>Option 2</ComboBoxItem>
          <ComboBoxItem>Combo</ComboBoxItem>
          <ComboBoxItem>Option 4</ComboBoxItem>
        </ComboBox>
        <ComboBox Grid.Row="5" IsEditable="True" SelectedIndex="2">
          <ComboBoxItem>Avalonia</ComboBoxItem>
          <ComboBoxItem>ComboBox</ComboBoxItem>
          <ComboBoxItem>IsEditable</ComboBoxItem>
          <ComboBoxItem>Option 4</ComboBoxItem>
        </ComboBox>
        <EditableComboBox Grid.Row="6">
          <EditableComboBoxItem Value="Devolutions" />
          <EditableComboBoxItem Value="EditableComboBox" />
          <EditableComboBoxItem Value="Option 3" />
        </EditableComboBox>
        <MultiComboBox Grid.Row="7" Watermark="MultiSelect...">
          <MultiComboBoxItem IsSelected="True">Item 1</MultiComboBoxItem>
          <MultiComboBoxItem>Item 2</MultiComboBoxItem>
          <MultiComboBoxItem IsSelected="True">Item 3</MultiComboBoxItem>
          <MultiComboBoxItem>Item 4</MultiComboBoxItem>
          <MultiComboBoxItem>Item 5</MultiComboBoxItem>
        </MultiComboBox>
        <TagInput Grid.Row="8" Watermark="TagInput" />
        <ColorPicker Grid.Row="9" />
        <AutoCompleteBox Grid.Row="10" x:Name="Animals2" FilterMode="Contains" Watermark="AutoComplete" />
        <NumericUpDown Grid.Row="11" Value="0"
                       Increment="1"
                       Watermark="mm" />
        <CalendarDatePicker Grid.Row="12" />
        <Button Grid.Row="13" Content="Button" />
        <CheckBox Grid.Row="14" Content="Checkbox" IsChecked="True" />
        <RadioButton Grid.Row="15" Content="RadioButton" IsChecked="True" />
      </Grid>

      <TextBlock Classes="h1" Text="StackPanels" Margin="0 20 0 0 " />
      <StackPanel Orientation="Vertical" Spacing="20" VerticalAlignment="Top">
        <StackPanel Orientation="Horizontal" Margin="10 0" Spacing="10" VerticalAlignment="Top">
          <TextBlock>TextBlock</TextBlock>
          <TextBox Watermark="TextBox" />
          <TextBox Height="22" MinHeight="22" MaxHeight="22"
                   IsVisible="{ext:ThemeIsOneOf 'DevExpress'}">
            thin
          </TextBox>
          <ComboBox SelectedIndex="2">
            <ComboBoxItem>Option 1</ComboBoxItem>
            <ComboBoxItem>Option 2</ComboBoxItem>
            <ComboBoxItem>Combo</ComboBoxItem>
            <ComboBoxItem>Option 4</ComboBoxItem>
          </ComboBox>
          <ComboBox SelectedIndex="2" IsEditable="True">
            <ComboBoxItem>Avalonia</ComboBoxItem>
            <ComboBoxItem>ComboBox</ComboBoxItem>
            <ComboBoxItem>IsEditable</ComboBoxItem>
            <ComboBoxItem>Option 4</ComboBoxItem>
          </ComboBox>
          <EditableComboBox>
            <EditableComboBoxItem Value="Devolutions" />
            <EditableComboBoxItem Value="EditableComboBox" />
            <EditableComboBoxItem Value="Option 3" />
          </EditableComboBox>
          <MultiComboBox Watermark="MultiSelect...">
            <MultiComboBoxItem IsSelected="True">Item 1</MultiComboBoxItem>
            <MultiComboBoxItem>Item 2</MultiComboBoxItem>
            <MultiComboBoxItem IsSelected="True">Item 3</MultiComboBoxItem>
            <MultiComboBoxItem>Item 4</MultiComboBoxItem>
            <MultiComboBoxItem>Item 5</MultiComboBoxItem>
          </MultiComboBox>
          <TagInput x:Name="HorizontalStackPanelTagInput" Watermark="TagInput" Width="150" VerticalAlignment="Center" />
          <ColorPicker />
          <AutoCompleteBox x:Name="Animals3" FilterMode="Contains" Watermark="AutoComplete" />
          <NumericUpDown Value="0"
                         Increment="1"
                         Watermark="mm" />
          <CalendarDatePicker />
          <Button Content="Button" />
          <CheckBox Content="Checkbox" IsChecked="True" />
          <RadioButton Content="RadioButton" IsChecked="True" />
          <!-- Force larger container height to test if controls are affected (they shouldn't be) -->
          <TextBlock Text="ðŸ™‚" FontSize="45" />
        </StackPanel>

        <TextBlock>Custom Height:</TextBlock>
        <TextBlock IsVisible="{ext:ThemeIsOneOf 'MacClassic, LiquidGlass'}">(Visible height 30 requires <TextBlock Classes="code">Height="33"</TextBlock> !)</TextBlock>

        <StackPanel Orientation="Horizontal" Margin="10 0" Spacing="10" VerticalAlignment="Top">
          <TextBlock Height="33">TextBlock</TextBlock>
          <TextBox Height="33" Watermark="TextBox" />
          <TextBox Height="22" MinHeight="22" MaxHeight="22"
                   IsVisible="{ext:ThemeIsOneOf 'DevExpress'}">
            thin
          </TextBox>
          <ComboBox Height="33" SelectedIndex="2">
            <ComboBoxItem>Option 1</ComboBoxItem>
            <ComboBoxItem>Option 2</ComboBoxItem>
            <ComboBoxItem>Combo</ComboBoxItem>
            <ComboBoxItem>Option 4</ComboBoxItem>
          </ComboBox>
          <ComboBox Height="33" SelectedIndex="2" IsEditable="True">
            <ComboBoxItem>Avalonia</ComboBoxItem>
            <ComboBoxItem>ComboBox</ComboBoxItem>
            <ComboBoxItem>IsEditable</ComboBoxItem>
            <ComboBoxItem>Option 4</ComboBoxItem>
          </ComboBox>
          <EditableComboBox Height="33">
            <EditableComboBoxItem Value="Devolutions" />
            <EditableComboBoxItem Value="EditableComboBox" />
            <EditableComboBoxItem Value="Option 3" />
          </EditableComboBox>
          <MultiComboBox Height="33" Watermark="MultiSelect...">
            <MultiComboBoxItem IsSelected="True">Item 1</MultiComboBoxItem>
            <MultiComboBoxItem>Item 2</MultiComboBoxItem>
            <MultiComboBoxItem IsSelected="True">Item 3</MultiComboBoxItem>
            <MultiComboBoxItem>Item 4</MultiComboBoxItem>
            <MultiComboBoxItem>Item 5</MultiComboBoxItem>
          </MultiComboBox>
          <TagInput Height="33" x:Name="HorizontalStackPanelTagInputCustomHeight" Watermark="TagInput" Width="150" VerticalAlignment="Center" />
          <ColorPicker Height="33" />
          <AutoCompleteBox Height="33" x:Name="AnimalsCustomHeight" FilterMode="Contains" Watermark="AutoComplete" />
          <NumericUpDown Height="33" Value="0"
                         Increment="1"
                         Watermark="mm" />
          <CalendarDatePicker Height="33" />
          <Button Height="33" Content="Button" />
          <CheckBox Height="33" Content="Checkbox" IsChecked="True" />
          <RadioButton Height="33" Content="RadioButton" IsChecked="True" />
          <!-- Force larger container height to test if controls are affected (they shouldn't be) -->
          <TextBlock Text="ðŸ™‚" FontSize="45" />
        </StackPanel>
        <StackPanel Orientation="Vertical" Width="150" Margin="10 5" Spacing="10" VerticalAlignment="Top" HorizontalAlignment="Left">
          <TextBlock>TextBlock</TextBlock>
          <TextBox Watermark="TextBox" />
          <ComboBox SelectedIndex="2">
            <ComboBoxItem>Option 1</ComboBoxItem>
            <ComboBoxItem>Option 2</ComboBoxItem>
            <ComboBoxItem>Combo</ComboBoxItem>
            <ComboBoxItem>Option 4</ComboBoxItem>
          </ComboBox>
          <ComboBox SelectedIndex="2" IsEditable="True">
            <ComboBoxItem>Avalonia</ComboBoxItem>
            <ComboBoxItem>ComboBox</ComboBoxItem>
            <ComboBoxItem>IsEditable</ComboBoxItem>
            <ComboBoxItem>Option 4</ComboBoxItem>
          </ComboBox>
          <EditableComboBox>
            <EditableComboBoxItem Value="Devolutions" />
            <EditableComboBoxItem Value="EditableComboBox" />
            <EditableComboBoxItem Value="Option 3" />
          </EditableComboBox>
          <MultiComboBox Watermark="MultiSelect...">
            <MultiComboBoxItem IsSelected="True">Item 1</MultiComboBoxItem>
            <MultiComboBoxItem>Item 2</MultiComboBoxItem>
            <MultiComboBoxItem IsSelected="True">Item 3</MultiComboBoxItem>
            <MultiComboBoxItem>Item 4</MultiComboBoxItem>
            <MultiComboBoxItem>Item 5</MultiComboBoxItem>
          </MultiComboBox>
          <TagInput Watermark="TagInput" />
          <ColorPicker HorizontalAlignment="Stretch" Width="NaN" />
          <ColorPicker />
          <AutoCompleteBox x:Name="Animals4" FilterMode="Contains" Watermark="AutoComplete" />
          <NumericUpDown Value="0"
                         Increment="1"
                         Watermark="mm" />
          <CalendarDatePicker />
          <TextBox Classes="revealPasswordButton" />
          <Button Content="Button" />
          <CheckBox Content="Checkbox" IsChecked="True" />
          <RadioButton Content="RadioButton" IsChecked="True" />
        </StackPanel>
      </StackPanel>
    </StackPanel>
  </ScrollViewer>
</UserControl>