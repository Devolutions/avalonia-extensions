            <TextBlock>Expanded content</TextBlock>
          </Expander>
          <Expander>
            <Expander.Header>
              <Grid ColumnDefinitions="*, Auto">
                <TextBlock Grid.Column="0" Text="Text" />
                <TextBlock Grid.Column="1" Text="ðŸ”´" HorizontalAlignment="Right" />
              </Grid>
            </Expander.Header>
            <TextBlock>Expanded content</TextBlock>
          </Expander>
          <Expander Header="Disabled" IsEnabled="False">
            <TextBlock>Expanded content</TextBlock>
