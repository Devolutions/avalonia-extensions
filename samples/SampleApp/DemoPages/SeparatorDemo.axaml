<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ext="clr-namespace:SampleApp.MarkupExtensions"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="SampleApp.DemoPages.SeparatorDemo">

  <ScrollViewer>
    <StackPanel Spacing="20" Margin="20">
      <TextBlock Classes="h1">Separator Demo</TextBlock>

      <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto" Margin="0,20,0,0">

        <!-- Default Separator Column -->
        <StackPanel Grid.Column="0" Spacing="10" Margin="0,0,40,0" Width="250">
          <TextBlock>
            <Bold>Default Separator</Bold>
          </TextBlock>
          <Border Background="{DynamicResource LayoutBackgroundLowBrush}"
                  BorderBrush="{DynamicResource LayoutBorderMidBrush}"
                  BorderThickness="1"
                  CornerRadius="4"
                  Padding="10"
                  HorizontalAlignment="Left">
            <StackPanel Width="200">
              <TextBlock Text="Item 1" Margin="5" />
              <TextBlock Text="Item 2" Margin="5" />
              <Separator />
              <TextBlock Text="Item 3" Margin="5" />
            </StackPanel>
          </Border>
        </StackPanel>

        <!-- MenuFlyout Column -->
        <StackPanel Grid.Column="1" Spacing="10" Margin="0,0,0,0" MaxWidth="400">
          <TextBlock><Bold>In menus</Bold> (ContextMenu, Menu, MenuFlyout)</TextBlock>
          <Border Padding="10 0 10 0"
                  HorizontalAlignment="Left">
            <StackPanel Spacing="10">
              <MenuFlyoutPresenter>
                <MenuItem Header="Flyout Item 1">
                  <MenuItem.Icon>
                    <Svg Path="/Assets/User.svg" />
                  </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Flyout Item 2">
                  <MenuItem.Icon>
                    <Svg Path="/Assets/Folder.svg" />
                  </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="Flyout Item 3">
                  <MenuItem.Icon>
                    <Svg Path="/Assets/Properties.svg" />
                  </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="-" />
                <MenuItem Header="Flyout Item 4 (after '-')">
                  <MenuItem.Icon>
                    <Svg Path="/Assets/Add.svg" />
                  </MenuItem.Icon>
                </MenuItem>
              </MenuFlyoutPresenter>
            </StackPanel>
          </Border>

          <TextBlock TextWrapping="Wrap" Margin="0,10,0,0">
            <Run FontWeight="Bold">Note:</Run>
            It is possible to create a separator using <TextBlock Classes="code" Text="&lt;MenuItem Header=&quot;-&quot; /&gt;" />. However, this will be rendered inside the header content area, so alignment and styling may differ from using an explicit
            <TextBlock Classes="code" Text="&lt;Separator /&gt;" />.
          </TextBlock>

          <TextBlock TextWrapping="Wrap" IsVisible="{ext:ThemeIsOneOf 'DevExpress'}" Margin="0,10,0,0">
            <Run FontWeight="Bold">DevExpress Only:</Run>
            Separators inside menus (Menu, ContextMenu, MenuFlyout) have a default margin to prevent them from extending into the icon channel.
          </TextBlock>

        </StackPanel>
      </Grid>

    </StackPanel>
  </ScrollViewer>
</UserControl>