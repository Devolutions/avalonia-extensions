<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:Devolutions.AvaloniaTheme.MacOS.Converters;assembly=Devolutions.AvaloniaTheme.MacOS">

  <!-- 
    Un-comment to allow auto-completion;
    DO NOT INCLUDE WHEN PUBLISHING!
  -->
  <!-- <ResourceDictionary.MergedDictionaries>
    <ResourceInclude Source="/Accents/ThemeResources.axaml" />
  </ResourceDictionary.MergedDictionaries>       -->

  <!-- MARK: Solid Colours -->

  <Color x:Key="AccentForegroundColor">#ffffff</Color>

  <!-- MARK: Converters -->
  <converters:OklchAdjustmentConverter x:Key="LightModeFocusColorConverter" LightnessAdjustment="-0.03" ChromaAdjustment="0.04" HueAdjustment="7" />
  <converters:OklchAdjustmentConverter x:Key="DarkModeFocusColorConverter" LightnessAdjustment="0.15" ChromaAdjustment="0" HueAdjustment="3" />

  <converters:OklchAdjustmentConverter x:Key="LightModeAccentBackgroundWashConverter" LightnessAdjustment="-0.01" ChromaAdjustment="-0.01" HueAdjustment="5" />
  <converters:OklchAdjustmentConverter x:Key="DarkModeAccentBackgroundWashConverter" LightnessAdjustment="0" ChromaAdjustment="-0.01" HueAdjustment="5.1" />

  <!-- MARK: Brushes -->

  <!-- Brush naming scheme: -->
  <!--   Surface = low-opacity Foreground brushes for surfaces (vs. lines and text) -->
  <!--   T = Transparent (with opacity in %) -->
  <!--   H = Highlighted (with ForegroundColor overlay in %) -->
  <!--   D = Dimmed (with BackgroundColor overlay in %) -->

  <SolidColorBrush x:Key="Transparent" Color="Transparent" />

  <SolidColorBrush x:Key="SurfaceT03" Color="{DynamicResource ForegroundColor}" Opacity="0.03" />
  <SolidColorBrush x:Key="SurfaceT04" Color="{DynamicResource ForegroundColor}" Opacity="0.04" />
  <SolidColorBrush x:Key="SurfaceT05" Color="{DynamicResource ForegroundColor}" Opacity="0.05" />
  <SolidColorBrush x:Key="SurfaceT07" Color="{DynamicResource ForegroundColor}" Opacity="0.07" />
  <SolidColorBrush x:Key="SurfaceT08" Color="{DynamicResource ForegroundColor}" Opacity="0.08" />
  <SolidColorBrush x:Key="SurfaceT10" Color="{DynamicResource ForegroundColor}" Opacity="0.1" />
  <SolidColorBrush x:Key="SurfaceT13" Color="{DynamicResource ForegroundColor}" Opacity="0.13" />
  <SolidColorBrush x:Key="SurfaceT14" Color="{DynamicResource ForegroundColor}" Opacity="0.14" />
  <SolidColorBrush x:Key="SurfaceT15" Color="{DynamicResource ForegroundColor}" Opacity="0.15" />
  <SolidColorBrush x:Key="SurfaceT16" Color="{DynamicResource ForegroundColor}" Opacity="0.16" />
  <SolidColorBrush x:Key="SurfaceT18" Color="{DynamicResource ForegroundColor}" Opacity="0.18" />
  <SolidColorBrush x:Key="SurfaceT19" Color="{DynamicResource ForegroundColor}" Opacity="0.19" />

  <SolidColorBrush x:Key="ForegroundT24" Color="{DynamicResource ForegroundColor}" Opacity="0.24" />
  <SolidColorBrush x:Key="ForegroundT26" Color="{DynamicResource ForegroundColor}" Opacity="0.26" />
  <SolidColorBrush x:Key="ForegroundT85" Color="{DynamicResource ForegroundColor}" Opacity="0.85" />

  <SolidColorBrush x:Key="AccentForeground" Color="{DynamicResource AccentForegroundColor}" />
  <SolidColorBrush x:Key="AccentForegroundT25" Color="{DynamicResource AccentForegroundColor}" Opacity="0.25" />
  <SolidColorBrush x:Key="AccentForegroundT49" Color="{DynamicResource AccentForegroundColor}" Opacity="0.49" />
  <SolidColorBrush x:Key="AccentForegroundT51" Color="{DynamicResource AccentForegroundColor}" Opacity="0.51" />
  <SolidColorBrush x:Key="AccentForegroundT84" Color="{DynamicResource AccentForegroundColor}" Opacity="0.84" />

  <SolidColorBrush x:Key="SystemAccent" Color="{DynamicResource SystemAccentColor}" />
  <SolidColorBrush x:Key="SystemAccentT48" Color="{DynamicResource SystemAccentColor}" Opacity="0.48" />

  <VisualBrush x:Key="SystemAccentH10" Stretch="Fill">
    <VisualBrush.Visual>
      <Panel>
        <Rectangle Fill="{StaticResource SystemAccent}" Width="16" Height="16" />
        <Rectangle Fill="{StaticResource SurfaceT10}" Width="16" Height="16" />
      </Panel>
    </VisualBrush.Visual>
  </VisualBrush>

  <VisualBrush x:Key="SystemAccentH13" Stretch="Fill">
    <VisualBrush.Visual>
      <Panel>
        <Rectangle Fill="{StaticResource SystemAccent}" Width="16" Height="16" />
        <Rectangle Fill="{StaticResource SurfaceT13}" Width="16" Height="16" />
      </Panel>
    </VisualBrush.Visual>
  </VisualBrush>

  <VisualBrush x:Key="SystemAccentD03" Stretch="Fill">
    <VisualBrush.Visual>
      <Panel>
        <Rectangle Fill="{StaticResource SystemAccent}" Width="16" Height="16" />
        <Rectangle Fill="{StaticResource SurfaceT03}" Width="16" Height="16" />
      </Panel>
    </VisualBrush.Visual>
  </VisualBrush>

  <VisualBrush x:Key="SystemAccentD04" Stretch="Fill">
    <VisualBrush.Visual>
      <Panel>
        <Rectangle Fill="{StaticResource SystemAccent}" Width="16" Height="16" />
        <Rectangle Fill="{StaticResource SurfaceT04}" Width="16" Height="16" />
      </Panel>
    </VisualBrush.Visual>
  </VisualBrush>

  <!-- MARK: Shadows -->

  <BoxShadows x:Key="NoShadow">0 0 Transparent</BoxShadows>

  <!-- MARK: Thicknesses -->

  <Thickness x:Key="Thickness0">0</Thickness>
  <Thickness x:Key="ThicknessT1">0 1 0 0</Thickness>
  <Thickness x:Key="ThicknessL12R11">12 0 11 0</Thickness>

  <!-- MARK: Measurements -->

  <x:Double x:Key="ControlSize24">24</x:Double>
  <x:Double x:Key="ControlSize16">16</x:Double>
  <x:Double x:Key="ControlSize10">10</x:Double>
  <x:Double x:Key="ControlSize9">9</x:Double>
  <x:Double x:Key="ControlSize5">5</x:Double>
  <x:Double x:Key="ControlSize3">3</x:Double>

  <!-- MARK: Radii -->

  <CornerRadius x:Key="Radius8">8</CornerRadius>
  <CornerRadius x:Key="Radius6">6</CornerRadius>
  <CornerRadius x:Key="Radius5">5</CornerRadius>


  <!-- Resource naming scheme: -->
  <!-- Class - Control - Control-state - disabled - inactive / Interaction-state - Element - Property / Resource-type -->


  <!-- MARK: Light Mode -->

  <ResourceDictionary.ThemeDictionaries>
    <ResourceDictionary x:Key="Default">
      <SolidColorBrush x:Key="AccentBackgroundWash" Color="{Binding Source={StaticResource SystemAccentColor}, Converter={StaticResource LightModeAccentBackgroundWashConverter}}"
                       Opacity="0.43" />

      <!-- Generic resources shared across controls (use sparingly!) -->

      <SolidColorBrush x:Key="FocusBorderBrush" Color="{Binding Color, Source={StaticResource SystemAccent}, Converter={StaticResource LightModeFocusColorConverter}}" Opacity="0.49" />
      <StaticResource x:Key="ControlLabelBrush" ResourceKey="ForegroundT85" />
      <StaticResource x:Key="ControlDisabledLabelBrush" ResourceKey="ForegroundT24" />

      <!-- Control-specific resources -->

      <StaticResource x:Key="ButtonBackgroundBrush" ResourceKey="SurfaceT07" />
      <StaticResource x:Key="ButtonBorderBrush" ResourceKey="ButtonBackgroundBrush" />
      <StaticResource x:Key="ButtonDisabledBackgroundBrush" ResourceKey="SurfaceT04" />
      <StaticResource x:Key="ButtonDisabledBorderBrush" ResourceKey="Transparent" />
      <StaticResource x:Key="ButtonPressedBackgroundBrush" ResourceKey="SurfaceT16" />
      <StaticResource x:Key="AccentButtonBackgroundBrush" ResourceKey="SystemAccent" />
      <StaticResource x:Key="AccentButtonPressedBackgroundBrush" ResourceKey="SystemAccentH10" />

      <StaticResource x:Key="CheckBoxBackgroundBrush" ResourceKey="SurfaceT10" />
      <StaticResource x:Key="CheckBoxPressedBackgroundBrush" ResourceKey="SurfaceT19" />
      <StaticResource x:Key="CheckBoxCheckedBackgroundBrush" ResourceKey="SystemAccentD04" />
      <StaticResource x:Key="CheckBoxCheckedPressedBackgroundBrush" ResourceKey="SystemAccentH10" />
      <StaticResource x:Key="CheckBoxCheckedInactiveBackgroundBrush" ResourceKey="SurfaceT15" />
      <StaticResource x:Key="CheckBoxCheckedDisabledBackgroundBrush" ResourceKey="AccentBackgroundWash" />
      <StaticResource x:Key="CheckBoxCheckedDisabledInactiveBackgroundBrush" ResourceKey="SurfaceT08" />
      <StaticResource x:Key="CheckBoxDisabledBackgroundBrush" ResourceKey="SurfaceT05" />
      <StaticResource x:Key="CheckBoxCheckMarkBrush" ResourceKey="AccentForeground" />
      <StaticResource x:Key="CheckBoxDisabledCheckMarkBrush" ResourceKey="AccentForegroundT49" />
      <StaticResource x:Key="CheckBoxInactiveCheckMarkBrush" ResourceKey="ForegroundT85" />
      <StaticResource x:Key="CheckBoxDisabledInactiveCheckMarkBrush" ResourceKey="ForegroundT26" />
      <StaticResource x:Key="CheckBoxBoxShadow" ResourceKey="NoShadow" />

    </ResourceDictionary>

    <!-- MARK: Dark Mode -->

    <ResourceDictionary x:Key="Dark">
      <SolidColorBrush x:Key="AccentBackgroundWash" Color="{Binding Source={StaticResource SystemAccentColor}, Converter={StaticResource DarkModeAccentBackgroundWashConverter}}"
                       Opacity="0.43" />

      <!-- Generic resources shared across controls (use sparingly!) -->

      <SolidColorBrush x:Key="FocusBorderBrush" Color="{Binding Color, Source={StaticResource SystemAccent}, Converter={StaticResource DarkModeFocusColorConverter}}" Opacity="0.49" />
      <StaticResource x:Key="ControlLabelBrush" ResourceKey="ForegroundT85" />
      <StaticResource x:Key="ControlDisabledLabelBrush" ResourceKey="ForegroundT24" />

      <!-- Control-specific resources -->

      <StaticResource x:Key="ButtonBackgroundBrush" ResourceKey="SurfaceT08" />
      <StaticResource x:Key="ButtonBorderBrush" ResourceKey="Transparent" />
      <StaticResource x:Key="ButtonDisabledBackgroundBrush" ResourceKey="SurfaceT03" />
      <StaticResource x:Key="ButtonDisabledBorderBrush" ResourceKey="Transparent" />
      <StaticResource x:Key="ButtonPressedBackgroundBrush" ResourceKey="SurfaceT16" />
      <StaticResource x:Key="AccentButtonBackgroundBrush" ResourceKey="SystemAccent" />
      <StaticResource x:Key="AccentButtonPressedBackgroundBrush" ResourceKey="SystemAccentH10" />

      <StaticResource x:Key="CheckBoxBackgroundBrush" ResourceKey="SurfaceT10" />
      <StaticResource x:Key="CheckBoxPressedBackgroundBrush" ResourceKey="SurfaceT18" />
      <StaticResource x:Key="CheckBoxCheckedBackgroundBrush" ResourceKey="SystemAccentD03" />
      <StaticResource x:Key="CheckBoxCheckedPressedBackgroundBrush" ResourceKey="SystemAccentH13" />
      <StaticResource x:Key="CheckBoxCheckedInactiveBackgroundBrush" ResourceKey="SurfaceT14" />
      <StaticResource x:Key="CheckBoxCheckedDisabledBackgroundBrush" ResourceKey="AccentBackgroundWash" />
      <StaticResource x:Key="CheckBoxCheckedDisabledInactiveBackgroundBrush" ResourceKey="SurfaceT07" />
      <StaticResource x:Key="CheckBoxDisabledBackgroundBrush" ResourceKey="SurfaceT05" />
      <StaticResource x:Key="CheckBoxCheckMarkBrush" ResourceKey="AccentForeground" />
      <StaticResource x:Key="CheckBoxDisabledCheckMarkBrush" ResourceKey="AccentForegroundT51" />
      <StaticResource x:Key="CheckBoxInactiveCheckMarkBrush" ResourceKey="AccentForegroundT84" />
      <StaticResource x:Key="CheckBoxDisabledInactiveCheckMarkBrush" ResourceKey="AccentForegroundT25" />
      <StaticResource x:Key="CheckBoxBoxShadow" ResourceKey="NoShadow" />

    </ResourceDictionary>
  </ResourceDictionary.ThemeDictionaries>

  <!-- MARK: Common Resources -->

  <StaticResource x:Key="ButtonBorderBoxShadow" ResourceKey="NoShadow" />
  <StaticResource x:Key="ButtonBorderThickness" ResourceKey="Thickness0" />
  <StaticResource x:Key="ButtonMinHeight" ResourceKey="ControlSize24" />
  <StaticResource x:Key="ButtonTextMargin" ResourceKey="ThicknessT1" />
  <StaticResource x:Key="ButtonCornerRadius" ResourceKey="Radius6" />
  <StaticResource x:Key="ButtonPadding" ResourceKey="ThicknessL12R11" />

  <StaticResource x:Key="CheckBoxCornerRadius" ResourceKey="Radius5" />
  <StaticResource x:Key="CheckBoxBorderThickness" ResourceKey="Thickness0" />
  <StaticResource x:Key="CheckBoxSize" ResourceKey="ControlSize16" />
  <StaticResource x:Key="CheckBoxCheckMarkSize" ResourceKey="ControlSize10" />
  <StaticResource x:Key="CheckBoxIndeterminateMarkWidth" ResourceKey="ControlSize9" />
  <StaticResource x:Key="CheckBoxIndeterminateMarkHeight" ResourceKey="ControlSize3" />

  <StaticResource x:Key="RadioButtonBackgroundBrush" ResourceKey="CheckBoxBackgroundBrush" />
  <StaticResource x:Key="RadioButtonPressedBackgroundBrush" ResourceKey="CheckBoxPressedBackgroundBrush" />
  <StaticResource x:Key="RadioButtonCheckedBackgroundBrush" ResourceKey="CheckBoxCheckedBackgroundBrush" />
  <StaticResource x:Key="RadioButtonCheckedPressedBackgroundBrush" ResourceKey="CheckBoxCheckedPressedBackgroundBrush" />
  <StaticResource x:Key="RadioButtonCheckedInactiveBackgroundBrush" ResourceKey="CheckBoxCheckedInactiveBackgroundBrush" />
  <StaticResource x:Key="RadioButtonCheckedDisabledBackgroundBrush" ResourceKey="CheckBoxCheckedDisabledBackgroundBrush" />
  <StaticResource x:Key="RadioButtonCheckedDisabledInactiveBackgroundBrush" ResourceKey="CheckBoxCheckedDisabledInactiveBackgroundBrush" />
  <StaticResource x:Key="RadioButtonDisabledBackgroundBrush" ResourceKey="CheckBoxDisabledBackgroundBrush" />
  <StaticResource x:Key="RadioButtonCheckMarkBrush" ResourceKey="CheckBoxCheckMarkBrush" />
  <StaticResource x:Key="RadioButtonDisabledCheckMarkBrush" ResourceKey="CheckBoxDisabledCheckMarkBrush" />
  <StaticResource x:Key="RadioButtonInactiveCheckMarkBrush" ResourceKey="CheckBoxInactiveCheckMarkBrush" />
  <StaticResource x:Key="RadioButtonDisabledInactiveCheckMarkBrush" ResourceKey="CheckBoxDisabledInactiveCheckMarkBrush" />
  <StaticResource x:Key="RadioButtonBoxShadow" ResourceKey="NoShadow" />

  <StaticResource x:Key="RadioButtonCornerRadius" ResourceKey="Radius8" />
  <StaticResource x:Key="RadioButtonBorderThickness" ResourceKey="Thickness0" />
  <StaticResource x:Key="RadioButtonSize" ResourceKey="ControlSize16" />
  <StaticResource x:Key="RadioButtonCheckMarkSize" ResourceKey="ControlSize5" />

  <!-- ComboBox Resources -->
  <StaticResource x:Key="ComboBoxBackgroundBrush" ResourceKey="ButtonBackgroundBrush" />
  <StaticResource x:Key="ComboBoxPressedBackgroundBrush" ResourceKey="ButtonPressedBackgroundBrush" />
  <StaticResource x:Key="ComboBoxBorderBrush" ResourceKey="Transparent" />
  <StaticResource x:Key="ComboBoxBorderThickness" ResourceKey="Thickness0" />
  <StaticResource x:Key="ComboBoxBoxShadow" ResourceKey="NoShadow" />

  <!-- ComboBox Button (ToggleButton) -->
  <StaticResource x:Key="ComboBoxButtonBackgroundBrush" ResourceKey="Transparent" />
  <StaticResource x:Key="ComboBoxButtonInactiveBackgroundBrush" ResourceKey="Transparent" />
  <StaticResource x:Key="ComboBoxButtonBorderBrush" ResourceKey="Transparent" />
  <StaticResource x:Key="ComboBoxButtonInactiveBorderBrush" ResourceKey="Transparent" />
  <StaticResource x:Key="ComboBoxButtonBorderThickness" ResourceKey="Thickness0" />

  <StaticResource x:Key="ComboBoxChevronBrush" ResourceKey="ControlLabelBrush" />
  <StaticResource x:Key="ComboBoxChevronInactiveBrush" ResourceKey="ControlLabelBrush" />


  <!-- DEVELOPMENT ONLY -->

  <SolidColorBrush x:Key="SampleAppBackground" Color="{DynamicResource SystemRegionColor}" Opacity="0.8" />

</ResourceDictionary>