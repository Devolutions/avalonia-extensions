<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:actipro="http://schemas.actiprosoftware.com/avaloniaui"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SampleApp.Experiments.ActiProDemo">


  <StackPanel>
    <TextBlock>ActiPro HyperlinkTextBlock:</TextBlock>
    <actipro:HyperlinkTextBlock Click="OnHyperlinkTextBlockClicked"
                                Text="This is an ActiPro HyperlinkTextBlock" />
    <Border Padding="10 10 0 0 ">
      <actipro:ShadowChrome Margin="0,0,40,40" Width="100" Height="60" Elevation="8" ShadowColor="Black" ShadowOpacity="0.7" HorizontalAlignment="Left">
        <Rectangle Fill="DarkSeaGreen" Stroke="White" StrokeThickness="4" />
      </actipro:ShadowChrome>
    </Border>
  </StackPanel>

</UserControl>