<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>13</LangVersion>
    <RootNamespace>Devolutions.AvaloniaControls</RootNamespace>
    <DevolutionsAvaloniaIncludeUrsa>true</DevolutionsAvaloniaIncludeUrsa>
  </PropertyGroup>

  <PropertyGroup>
    <EnableTreeDataGrid Condition="'$(EnableTreeDataGrid)' == '' and '$(USE_AVALONIA_ACCELERATE_CONTROLS)' == 'true'">true</EnableTreeDataGrid>
    <EnableTreeDataGrid Condition="'$(EnableTreeDataGrid)' == ''">false</EnableTreeDataGrid>
  </PropertyGroup>

  <PropertyGroup Condition="'$(EnableTreeDataGrid)' == 'true'">
    <DefineConstants>$(DefineConstants);ENABLE_TREEDATAGRID</DefineConstants>
  </PropertyGroup>

  <PropertyGroup>
    <Version>1.0.0</Version>
    <Company>Devolutions</Company>
    <Description>Devolutions Avalonia Controls Library</Description>
    <PackageProjectUrl>https://github.com/Devolutions/avalonia-extensions/tree/master/src/Devolutions.AvaloniaControls</PackageProjectUrl>
    <PackageId>Devolutions.AvaloniaControls</PackageId>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageReleaseNotes>
      See https://github.com/Devolutions/avalonia-extensions/blob/master/src/Devolutions.AvaloniaControls/CHANGELOG.md
    </PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="[11.3.7,)" />
    <PackageReference Include="Xaml.Behaviors" Version="[11.3.0,)" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="*" />
    <PackageReference Include="System.Reactive" Version="*" />

    <PackageReference Include="Irihi.Ursa" Version="[1.12.0,)" />
    
    <!-- Conditionally include the real TreeDataGrid package -->
    <PackageReference Include="Avalonia.Controls.TreeDataGrid" Version="11.2.3" Condition="'$(EnableTreeDataGrid)' == 'true'" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Controls\MultiComboBox\InnerMultiComboBoxList.cs">
      <DependentUpon>InnerMultiComboBoxList.axaml</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>