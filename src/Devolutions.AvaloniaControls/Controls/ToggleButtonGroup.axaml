<ResourceDictionary
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  x:ClassModifier="internal">
  <Design.PreviewWith>
    <ThemeVariantScope RequestedThemeVariant="Dark">
      <Border Background="Black">
        <ToggleButtonGroup ItemsMinWidth="94">
          <ToggleButtonGroupItem Content="System" />
          <ToggleButtonGroupItem Content="Light" />
          <ToggleButtonGroupItem Content="Dark" />
        </ToggleButtonGroup>
      </Border>
    </ThemeVariantScope>
  </Design.PreviewWith>

  <ControlTheme x:Key="{x:Type ToggleButtonGroup}" TargetType="ToggleButtonGroup" BasedOn="{StaticResource {x:Type ListBox}}">
    <Setter Property="HorizontalAlignment" Value="Left" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="ItemsPanel">
      <ItemsPanelTemplate>
        <WrapPanel Orientation="Horizontal" />
      </ItemsPanelTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>