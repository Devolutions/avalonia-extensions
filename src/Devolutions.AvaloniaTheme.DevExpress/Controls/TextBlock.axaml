<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Design.PreviewWith>
    <StackPanel Spacing="20" Orientation="Vertical" Background="#000">
      <ThemeVariantScope RequestedThemeVariant="Dark">
        <Border Background="#212121">
          <StackPanel Margin="20" Width="300" Spacing="10" HorizontalAlignment="Left">
            <TextBlock Classes="section-title">Some text</TextBlock>
            <TextBlock>Some text</TextBlock>
          </StackPanel>
        </Border>
      </ThemeVariantScope>
      <ThemeVariantScope RequestedThemeVariant="Light">
        <Border Background="#FFF">
          <StackPanel Margin="20" Width="300" Spacing="10" HorizontalAlignment="Left">
            <TextBlock Classes="section-title">Some text</TextBlock>
            <TextBlock>Some text</TextBlock>
          </StackPanel>
        </Border>
      </ThemeVariantScope>
    </StackPanel>
  </Design.PreviewWith>

  <ControlTheme x:Key="{x:Type TextBlock}" TargetType="TextBlock">
    <Style Selector="^.section-title">
      <Setter Property="FontWeight" Value="Bold" />
      <Setter Property="FontSize" Value="14" />
    </Style>
  </ControlTheme>
</ResourceDictionary>